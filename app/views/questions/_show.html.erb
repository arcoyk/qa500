<div class='question-div'>
	<div class='question-block'>
		<h4>Issue:</h4>
		Issue#<%= @question.id %>.
		<b><%= @question.content %></b><br>
		<spam class='gray small'><%= @question.created_at %></spam>
		<%= link_to " >>>", question_path(@question), {:class => 'question_show'} %>
	</div>
	<%= render 'vote/yesno', :@question => @question, :@yesno => @yesno %>
	<% if not @detail %>
		<div class='centered display-none display-none-<%= @question.id %>'>
		<form method="get" action="/questions/<%= @question.id %>" class="button_to" id="see-why-<%= @question.id %>">
			<input value="see why" type="submit" />
		</form>
		</div>
	<% end %>
</div>

<% if @detail %>
	<% if @yesno != nil %>
		<div class='display-none-<%= @question.id %>'>
	<% else %>
		<div class='display-none display-none-<%= @question.id %>'>
	<% end %>
	<%= render 'input', :@type => 'answer', :@question => @question, :@yesno => @yesno %>
<% end %>

<% if @detail %>
	<% if defined? @yesno %>
		<div class='answer-div display-none-<%= @question.id %>'>
	<% else %>
		<div class='answer-div display-none display-none-<%= @question.id %>'>
	<% end %>
		<% @question.answers.each do |answer| %>
			<% if answer.anstype == 'yes' %>
				<div class='yes-answer-block'>
			<% elsif answer.anstype == 'no' %>
				<div class='no-answer-block'>
			<% end %>
				<div class='answer-block'>
					V<%= answer.id %>.
					<b><%= answer.content %></b><br>
					<spam class='gray small'><%= answer.created_at %></spam>
				</div>
			</div>
		<% end %>
	</div>
<% end %>
